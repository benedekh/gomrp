<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
         <command
               commandId="hu.bme.mit.inf.gomrp.simulation.generated.simulate"
               label="Simulate Model GENERATED"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.extension"
                              value="rdm">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
 <extension
       point="org.eclipse.ui.commands">
    <command
          id="hu.bme.mit.inf.gomrp.simulation.generated.simulate"
          name="SimulateModelGENERATED">
    </command>
 </extension>
 <extension
       point="org.eclipse.ui.handlers">
    <handler
          class="hu.bme.mit.inf.gomrp.simulation.auto.SimulateModel"
          commandId="hu.bme.mit.inf.gomrp.simulation.generated.simulate">
    </handler>
 </extension>
</plugin>
